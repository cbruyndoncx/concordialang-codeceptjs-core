{
    "name": "concordialang-codeceptjs-core",
    "version": "0.5.0",
    "description": "Concordia compiler plug-in core for CodeceptJS",
    "license": "AGPL-3.0",
    "readme": "readme.md",
    "homepage": "https://github.com/thiagodp/concordialang-codeceptjs-core",
    "author": {
        "name": "Thiago Delgado Pinto",
        "email": "thiago-dp@bol.com.br"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/thiagodp/concordialang-codeceptjs-core.git"
    },
    "bugs": {
        "url": "https://github.com/thiagodp/concordialang-codeceptjs-core/issues"
    },
    "keywords": [
        "concordialang",
        "concordia-lang",
        "concordia",
        "codeceptjs",
        "test",
        "script",
        "e2e",
        "plugin",
        "plug-in"
    ],
    "main": "dist",
    "types": "dist",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "rimraf dist && tsc",
        "test": "jest --passWithNoTests",
        "all": "npm run build && npm run test",
        "preversion": "npm run all",
        "postversion": "git push && git push --tags"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "concordialang-plugin": "^0.6.1",
        "concordialang-types": "^2.0.0",
        "dedent-js": "^1.0.1",
        "figures": "^2.0.0",
        "log-symbols": "^2.2.0",
        "mustache": "^2.3.0",
        "node-fs-extra": "^0.8.2"
    },
    "devDependencies": {
        "@types/chalk": "^0.4.31",
        "@types/core-js": "^0.9.46",
        "@types/figures": "^2.0.0",
        "@types/jest": "^25.1.4",
        "@types/node": "^8.10.59",
        "jest": "^25.2.3",
        "memfs": "^2.17.1",
        "rimraf": "^2.7.1",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.3"
    }
}
